<div class="formContainer formContainer--page grid-col--xxs12">
    <div class="formSuccess formSuccess--page grid-row grid-row--middleXxs grid-row--centerXxs">
        <span class="formSuccess-loading u-loading"></span>
    </div>
    {% set form = craft.formerly.form('' ~ formChoice ~ '') %} 
    <form class="form form--page form--{{formChoice}} form--page" method="post" enctype="multipart/form-data"  accept-charset="utf-8">
        {{ getCsrfInput() }}
        <input type="hidden" name="action" value="formerly/submissions/postSubmission">
        <input type="hidden" name="redirect" value="{{ craft.request.url }}?ok=1">
        <input type="hidden" name="formId" value="{{ form.id }}">
        <div class="grid-row">
            {% for question in form.getQuestions() %}
                {% switch question.type %}
                    {% case 'PlainText' %}
                        <div class="form-field grid-col--xxs12 grid-col--xs6">
                            <label for="{{ question.handle }}">
                                {{ question.instructions ? question.instructions : question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </label>
                            <input type="text"
                                {% if question.required %}
                                    required
                                    aria-required="true"
                                    data-val-required="'{{ question.name }}' is required"
                                    data-val="true"
                                {% endif %}
                                {% if question.errorMessage %}
                                    data-validator-error-message="{{ question.errorMessage }}"
                            {% endif %}
                                {% if question.validationPattern %}
                                    pattern="{{ question.validationPattern }}"
                                {% endif %}
                                class="text"
                                placeholder="{{ question.name }}"
                                id="{{ question.handle }}"
                                name="questions[{{ question.handle }}]"
                                value="{{ submission is defined ? submission[question.handle] }}">
                        </div>
                        
                    {% case 'MultilineText' %}
                        <div class="form-field grid-col--xxs12">
                            <label for="{{ question.handle }}">
                                {{ question.instructions ? question.instructions : question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </label>
                            <textarea
                                {% if question.required %}
                                    required
                                    aria-required="true"
                                    data-val-required="'{{ question.name }}' is required"
                                    data-val="true"
                                {% endif %}
                                {% if question.errorMessage %}
                                    data-validator-error-message="{{ question.errorMessage }}"
                            {% endif %}
                                {% if question.validationPattern %}
                                    pattern="{{ question.validationPattern }}"
                                {% endif %}
                                class="text"
                                placeholder="{{ question.name }}"
                                cols="20" rows="2"
                                id="{{ question.handle }}"
                                name="questions[{{ question.handle }}]">{{ submission is defined ? submission[question.handle] }}</textarea>
                        </div>

                    {% case 'Dropdown' %}
                        <div class="form-field grid-col--xxs12 grid-col--xs6">
                            <label for="{{ question.handle }}">
                                    {{ question.instructions ? question.instructions : question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </label>
                            <select
                                {% if question.required %}
                                    required
                                    aria-required="true"
                                    data-val-required="'{{ question.name }}' is required"
                                    data-val="true"
                                    {% if question.errorMessage %}
                                        data-validator-error-message="{{ question.errorMessage }}"
                                {% endif %}
                                    {% if question.validationPattern %}
                                        pattern="{{ question.validationPattern }}"
                                    {% endif %}
                                {% endif %}
                                id="{{ question.handle }}"
                                name="questions[{{ question.handle }}]">
                                {% for option in question.options %}
                                    {% set selected = submission is defined and submission[question.handle]
                                        ? submission[question.handle] == option.value
                                        : option.default %}
                                    <option {{ selected ? 'selected' }}>
                                        {{ option.label }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                    {% case 'RadioButtons' %}
                        <div class="form-field grid-col--xxs12 grid-col--xs6">
                            <span>
                                {{ question.instructions ? question.instructions : question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </span>
                            <ul class="u-unstyledList">
                                {% for option in question.options %}
                                    <li>
                                        {% set selected = submission is defined and submission[question.handle]
                                            ? submission[question.handle] == option.value
                                            : option.default %}
                                        <input type="radio"
                                            id="{{ question.handle ~ loop.index }}"
                                            name="questions[{{ question.handle }}]"
                                            value="{{ option.value }}"
                                            {{ selected ? 'checked' }}>
                                        <label for="{{ question.handle ~ loop.index }}">{{ option.label }}</label>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>

                    {% case 'Checkboxes' %}
                        <div class="form-field grid-col--xxs12 grid-col--xs6">
                            <span>
                                {{ question.instructions ? question.instructions : question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </span>
                            <ul class="u-unstyledList">
                                {% for option in question.options %}
                                    <li>
                                        {% set selected = submission is defined and submission[question.handle]
                                            ? option.value in submission[question.handle]
                                            : option.default %}
                                        <input type="checkbox"
                                            id="{{ question.handle ~ loop.index }}"
                                            name="questions[{{ question.handle }}][]"
                                            value="{{ option.value }}"
                                            {{ selected ? 'checked' }}>
                                        <label for="{{ question.handle ~ loop.index }}">{{ option.label }}</label>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>

                    {% case 'CustomList' %}
                        <div class="form-field grid-col--xxs12 grid-col--xs6">
                            <span>
                                {{ question.instructions ? question.instructions : question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </span>
                            <ul class="u-unstyledList">
                                {% for option in question.options %}
                                    <li>
                                        <label for="{{ question.handle ~ loop.index }}">{{ option.label }}</label>
                                        {% set selected = submission is defined and submission[question.handle]
                                        ? option.value in submission[question.handle]
                                        : option.default %}
                                        <input type="textbox" maxlength="1"
                                               id="{{ question.handle ~ loop.index }}"
                                               name="questions[{{ question.handle }}][]"
                                               {% if question.required %}
                                                   required
                                                   aria-required="true"
                                                   data-val-required="'{{ question.name }}' is required"
                                                   data-val="true"
                                               {% endif %}
                                                 {% if question.errorMessage %}
                                                    data-validator-error-message="{{ question.errorMessage }}"
                                            {% endif %}
                                                {% if question.validationPattern %}
                                                    pattern="{{ question.validationPattern }}"
                                                {% endif %}
                                               {% if submission is defined %}
                                                value="{{ submission[question.handle][loop.index-1] }}"
                                               {% endif %}
                                               >
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>

                    {% case 'RawHTML' %}
                        <div class="form-field grid-col--xxs12">{{ question.instructions | raw }}</div>
                            
                    {% case 'Number' %}
                        <div class="form-field grid-col--xxs12 grid-col--xs6">
                            <label for="{{ question.handle }}">
                                {{ question.instructions ? question.instructions : question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </label>
                            <input type="number"
                                {% if question.required %}
                                    required
                                    aria-required="true"
                                    data-val-required="'{{ question.name }}' is required"
                                    data-val="true"
                                {% endif %}
                                class="text"
                                placeholder="{{ question.name }}"
                                id="{{ question.handle }}"
                                name="questions[{{ question.handle }}]"
                                value="{{ submission is defined ? submission[question.handle] }}">
                        </div>

                    {% case 'Email' %}
                        <div class="form-field grid-col--xxs12 grid-col--xs6">
                            <label for="{{ question.handle }}">
                                {{ question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </label>
                            <input type="email"
                                {% if question.required %}
                                    required
                                    aria-required="true"
                                    data-val-required="'{{ question.name }}' is required"
                                    data-val="true"
                                {% endif %}
                                {% if question.errorMessage %}
                                    data-validator-error-message="{{ question.errorMessage }}"
                            {% endif %}
                                {% if question.validationPattern %}
                                    pattern="{{ question.validationPattern }}"
                                {% endif %}
                                class="text"
                                placeholder="{{ question.name }}"
                                id="{{ question.handle }}"
                                name="questions[{{ question.handle }}]"
                                value="{{ submission is defined ? submission[question.handle] }}">
                        </div>

                    {% case 'Tel' %}
                        <div class="form-field grid-col--xxs12 grid-col--xs6">
                            <label for="{{ question.handle }}">
                                {{ question.instructions ? question.instructions : question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </label>
                            <input type="tel"
                                {% if question.required %}
                                    required
                                    aria-required="true"
                                    data-val-required="'{{ question.name }}' is required"
                                    data-val="true"
                                {% endif %}
                                {% if question.errorMessage %}
                                    data-validator-error-message="{{ question.errorMessage }}"
                            {% endif %}
                                {% if question.validationPattern %}
                                    pattern="{{ question.validationPattern }}"
                                {% endif %}
                                class="text"
                                placeholder="{{ question.name }}"
                                id="{{ question.handle }}"
                                name="questions[{{ question.handle }}]"
                                value="{{ submission is defined ? submission[question.handle] }}">
                        </div>

                    {% case 'Url' %}
                        <div class="form-field grid-col--xxs12 grid-col--xs6">
                            <label for="{{ question.handle }}">
                                {{ question.instructions ? question.instructions : question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </label>
                            <input type="url"
                                {% if question.required %}
                                    required
                                    aria-required="true"
                                    data-val-required="'{{ question.name }}' is required"
                                    data-val="true"
                                {% endif %}
                                {% if question.errorMessage %}
                                    data-validator-error-message="{{ question.errorMessage }}"
                            {% endif %}
                                {% if question.validationPattern %}
                                    pattern="{{ question.validationPattern }}"
                                {% endif %}
                                class="text"
                                placeholder="{{ question.name }}"
                                id="{{ question.handle }}"
                                name="questions[{{ question.handle }}]"
                                value="{{ submission is defined ? submission[question.handle] }}">
                        </div>

                    {% case 'Date' %}
                        <div class="form-field grid-col--xxs12 grid-col--xs6">
                            <label for="{{ question.handle }}">
                                {{ question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </label>
                            <input type="text"
                                {% if question.required %}
                                    required
                                    aria-required="true"
                                    data-val-required="'{{ question.name }}' is required"
                                    data-val="true"
                                {% endif %}
                                class="text"
                                {% if question.errorMessage %}
                                    data-validator-error-message="{{ question.errorMessage }}"
                            {% endif %}
                                {% if question.validationPattern %}
                                    pattern="{{ question.validationPattern }}"
                                {% else %}
                                    pattern="\d{2}\/\d{2}\/\d{4}"
                                {% endif %}
                                placeholder="{{ question.name }} (DD/MM/YYYY)"
                                id="{{ question.handle }}"
                                name="questions[{{ question.handle }}][date]"
                                value="{{ submission is defined ? submission[question.handle] }}">
                        </div>
                            
                    {% case 'Assets' %}
                        <div class="form-field grid-col--xxs12 grid-col--xs6">
                            <label for="{{ question.handle }}">
                                {{ question.instructions ? question.instructions : question.name }}{% if question.required %}&nbsp;<em>*</em>{% endif %}
                            </label>
                            <input type="file"
                                   {% if question.required %}
                                   required
                                   aria-required="true"
                                   data-val-required="'{{ question.name }}' is required"
                                   data-val="true"
                                   {% endif %}
                                   class="input-text"
                                   id="{{ question.handle }}"
                                   name="questions[{{ question.handle }}]">
                        </div>
                    {% endswitch %}
            {% endfor %}
            <div class="form-field grid-col--xxs12">
                {% if craft.config.formerly is defined and craft.config.formerly.honeyPotName is defined %}
                    <input class="u-hidden" id="formerly-hp-sec_{{formChoice}}" type="text" name="{{ craft.config.formerly.honeyPotName }}" />
                {% endif %}
                <button class="button" type="submit">Send <i class="fa fa-angle-right"></i></button>
            </div>
        </div>
    </form>
</div>