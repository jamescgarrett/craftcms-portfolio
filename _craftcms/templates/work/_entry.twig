{% extends '_layouts/site' %}

{% block main %}    
    {% cache unless not craft.config.cache %}
        <div class="page">
            <div class="page-fullSection row row--nomargin">
                <div class="col--12 col--6sm">
                    <div class="page-imageColumn page-imageColumn--{{macros.lowercase_replace_space(entry.title)}} row row--middle row--center row--nomargin">
                        
                    </div>
                </div>
                <div class="col--12 col--6sm">
                    <div class="page-textColumn-full row row--middle row--center row--nomargin">
                        <div class="col--7">
                            <div class="page-textColumn-header">
                                <h1>{{entry.title}}</h1>
                                <p>{{entry.description}}</p>
                            </div>
                            <div class="page-textColumn-info">
                                <p class="page-textColumn-tech"><strong>{{"Tech:"|t}}</strong> {{entry.tech}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endcache %}
{% endblock %}
